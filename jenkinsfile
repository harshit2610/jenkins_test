pipeline {
agent any
stages {
stage('Clone repository') {
steps {
checkout([$class: 'GitSCM', branches: [[name: '*/master']], userRemoteConfigs: [[url: 'https://github.com/harshit2610/jenkins_test.git']]])
}
}
stage('Build Docker image') {
steps {
script {
    def dockerImage = docker.build('fib:1.0', '.')
}
}
}
stage('Push to Docker Hub') {
steps {
withCredentials([usernamePassword(credentialsId: 'docker_har', usernameVariable: 'DOCKER_USERNAME', passwordVariable: 'DOCKER_PASSWORD')]) {
sh 'docker login -u $DOCKER_USERNAME -p $DOCKER_PASSWORD'
}
sh 'docker tag fib:1.0 harshit2610/fibonnaci:2.0'
sh 'docker push harshit2610/fibonnaci:2.0'
}
}
}
}
